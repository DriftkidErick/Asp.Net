@page
@model Week6_labs_ErickC.Pages.RequestProdModel
@{
    ViewData["Title"] = "RequestProd";
}

<h1>Request A Product</h1>

@* The Goal with the page is to allow customers to request for performace parts that are out of stock/ something we do not carry*@

<form method="post">
    
    <input type="text" asp-for="tAsk.Ask_Brand" placeholder="Brand" />
    <br />
    <input type="text" asp-for="tAsk.Ask_Model" placeholder="Model" />
    <br />
    <input type="text" asp-for="tAsk.Ask_Category" placeholder="Category" />
    <br />
    <input type="text" asp-for="tAsk.Ask_Quantity" placeholder="Quantity" />
    <br />
    <input type="text" asp-for="tAsk.Ask_Description" placeholder="Description" />
    <br />
    <input type="text" asp-for="tAsk.Cust_email" placeholder="Your Email" />

    @* Button that will submit form data via a POST method*@
    <button type="submit">Submit</button>

</form>

@{
    if (Model.tAsk is null == false) //Meaning that if the info is filled in
    {
        <h1>Results</h1>
        <p>Brand: @Model.tAsk.Ask_Brand</p>
        <p>Model: @Model.tAsk.Ask_Model</p>
        <p>Category: @Model.tAsk.Ask_Category</p>
        <p>Your Email: @Model.tAsk.Cust_email</p>
    }
}